@model List<WebUI.Controllers.TagViewModel>
@{
    ViewData["Title"] = "Tags";
    var orderbyValue = Context.Request.Query["orderby"].ToString();
    var topValue = Context.Request.Query["top"].ToString();
    var skipValue = Context.Request.Query["skip"].ToString();
}

<h2 class="text-center mb-4">Tags</h2>
<div class="container">
    <form asp-action="Index" method="get" class="row g-2 mb-3">
        <div class="col-auto">
            <select name="orderby" class="form-select">
                <option value="">Sort by</option>
                @if(orderbyValue=="TagName") {
                    <option value="TagName" selected>Name</option>
                } else {
                    <option value="TagName">Name</option>
                }
                @if(orderbyValue=="TagId") {
                    <option value="TagId" selected>ID</option>
                } else {
                    <option value="TagId">ID</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <input type="number" name="top" class="form-control" placeholder="Top" value="@topValue" min="1" />
        </div>
        <div class="col-auto">
            <input type="number" name="skip" class="form-control" placeholder="Skip" value="@skipValue" min="0" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Apply</button>
        </div>
    </form>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TagId</td>
                <td>@item.TagName</td>
                <td>@item.Note</td>
            </tr>
        }
        </tbody>
    </table>
</div>
