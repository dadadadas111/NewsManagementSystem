@model WebUI.Controllers.CategoryViewModel
@{
    ViewData["Title"] = "Category Details";
}

<h2 class="text-center mb-4">Category Details</h2>
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.CategoryId</dd>
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.CategoryDescription</dd>
            </dl>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
