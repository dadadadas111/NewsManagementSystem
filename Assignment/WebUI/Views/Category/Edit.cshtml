@model WebUI.Models.EditCategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
}
<h2>Edit Category</h2>
@if (ViewBag.ApiError != null)
{
    <div class="alert alert-danger">@ViewBag.ApiError</div>
}
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryDescription"></label>
        <textarea asp-for="CategoryDescription" class="form-control"></textarea>
        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
